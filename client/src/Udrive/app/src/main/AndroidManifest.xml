<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fiuba.tallerprog2.udrive" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme.Base" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_main_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fiuba.tallerprog2.udrive.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.fiuba.tallerprog2.udrive.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fiuba.tallerprog2.udrive.MainActivity" />
        </activity>
    </application>

</manifest>
