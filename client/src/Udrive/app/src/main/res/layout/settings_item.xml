<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/imageViewSettingItem" android:layout_width="36dp" android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerVertical="true"/>

    <TextView android:id="@+id/textViewSettingItem" android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@+id/imageViewSettingItem"
        android:textSize="18sp" android:singleLine="true"/>

</LinearLayout>