<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <ListView android:id="@+id/fileListView" android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_weight="1" android:drawSelectorOnTop="false" />

    <TextView
        android:id="@+id/emptyFileListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/fileList_is_empty"
        android:visibility="gone"></TextView>

</LinearLayout>