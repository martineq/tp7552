<resources>
        <!-- Customize your theme here. -->
    <!-- Base theme applied no matter what API -->
    <style name="MyTheme.Base" parent="Theme.AppCompat.Light">
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#f19c47</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#f18e2c</item>
        <!-- colorAccent is used as the default value for colorControlActivated
                which is used to tint widgets -->
        <item name="colorAccent">#f18e2c</item>
        <!-- You can also set colorControlNormal, colorControlActivated
              colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionOverflowButtonStyle">@style/MyActionOverFlow</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyActionOverFlow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
       <item name="android:src">@drawable/ic_overflow</item>
    </style>

</resources>
